{% extends '::baseBack.html.twig' %}
{% block body -%}
    <!-- ==================== PAGE CONTENT ==================== -->
    <div class="content">
        <!-- ==================== WIDGETS CONTAINER ==================== -->
        <div class="container-fluid">
            <!-- ==================== END OF ROW ==================== -->

            <div class="row-fluid">
                <div class="span12">


                    <div class="row-fluid">
                        <div class="span12">
                            <!-- ==================== DEFAULT TABLE HEADLINE ==================== -->
                            <div class="containerHeadline">
                                <i class="icon-table"></i>

                                <h2>Traking :</h2>
                            </div>
                            <!-- ==================== END OF DEFAULT TABLE HEADLINE ==================== -->

                            <!-- ==================== DEFAULT TABLE FLOATING BOX ==================== -->
                            <div class="floatingBox table">
                                <div class="container-fluid">
                                    <table class="table">
                                        <thead>
                                        <tr>
                                            <th>id </th>
                                            <th>Status</th>
                                            <th>Date</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for entity in entities %}
                                            <tr>
                                                <td>{{ entity.id }}</td>
                                                <td>{{ entity.status_label }}</td>
                                                <td>{{ entity.update_date }}</td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- ==================== END OF WIDGETS CONTAINER ==================== -->
    </div>
    <!-- ==================== END OF PAGE CONTENT ==================== -->
{% endblock %}
