{% block body -%}
    <div class="content">
        <div class="">

            <!-- ==================== COMMON ELEMENTS ROW ==================== -->
            <div class="row-fluid">
                <div class="span12">
                    <!-- ==================== TEXT INPUTS HEADLINE ==================== -->
                    <div class="containerHeadline">
                        <h2>Historique</h2>

                    </div>
                    <!-- ==================== END OF TEXT INPUTS HEADLINE ==================== -->
                    <!-- ==================== TEXT INPUTS FLOATING BOX ==================== -->
                    <div class="floatingBox">
                        <div class="container-fluid">
                            <div class="container-fluid">
                                <div class="floatingBox table">
                                    <div class="container-fluid">
                                        <table class="table">
                                            <thead>
                                            <tr>
                                                <th>Date</th>
                                                <th>Action</th>
                                                <th>Utilisateur</th>

                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for item in historiqueTicket %}
                                                <tr>
                                                    <td> {{ item.dcr|date('d-m-Y H:i:s') }}</td>
                                                    <td> {{ item.action }}</td>
                                                    <td> {{ item.user.name }}</td>


                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <!-- ==================== END OF TEXT INPUTS FLOATING BOX ==================== -->
                </div>
            </div>
        </div>
    </div>
{% endblock %}
