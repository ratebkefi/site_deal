{% extends '::baseBack.html.twig' %}
{% block body -%}
    <!-- ==================== PAGE CONTENT ==================== -->
    <div class="content">
        <!-- ==================== WIDGETS CONTAINER ==================== -->
        <div class="container-fluid">
            {% if  app.user.roles[0]!= 'DAF' and app.user.roles[0]!= 'FINANCIER'%}

            <a href="{{ path('update_caissier_manager', { 'id': entity.id }) }}" class="btn btn-info"><i class="icon-pencil"></i> Modifier</a>
{% endif %}
            <a href="{{ path('list_caissier') }}" class="btn btn-inverse pull-right"><i class="icon-list"></i> Liste</a>


            <!-- ==================== END OF ROW ==================== -->
            <div class="row-fluid">
                <div class="span12">
                    <!-- ==================== DEFAULT TABLE HEADLINE ==================== -->
                    <div class="containerHeadline">
                        <i class="icon-table"></i><h2>Cassier : {{ entity.name }}</h2>
                    </div>
                    <!-- ==================== END OF DEFAULT TABLE HEADLINE ==================== -->
                    <!-- ==================== DEFAULT TABLE FLOATING BOX ==================== -->
                    <div class="floatingBox table">
                        <div class="container-fluid">
                            <table class="table table-bordered">
                                <tbody>

                                <tr>
                                    <th>Banque :</th>
                                    <td>{{ entity.bank }}</td>
                                </tr>
                                <tr>
                                    <th>Agence :</th>
                                    <td>{{ entity.agency }}</td>
                                </tr>
                                <tr>
                                    <th>Rib :</th>
                                    <td>{{ entity.rib }}</td>
                                </tr>
                                <tr>
                                    <th>Adresse :</th>
                                    <td>{{ entity.address }}</td>
                                </tr>
                                <tr>
                                    <th>Téléphone :</th>
                                    <td>{{ entity.phone }}</td>
                                </tr>
                                <tr>
                                    <th>Photo :</th>
                                    <td><img src="{{ asset('uploads/user/'~entity.profilePicturePath) }}" width="200" /></td>
                                </tr>
                                <tr>
                                    <th>Téléphone d'urgence :</th>
                                    <td>{{ entity.phoneurg }}</td>
                                </tr>
                                <tr>
                                    <th>Adresse d'urgence</th>
                                    <td>{{ entity.adresseurg  }}</td>
                                </tr>
                                {% if entity.caisse %}
                                <tr>
                                    <th colspan="2"><h4>Caisse</h4></th>
                                </tr>

                                <tr>
                                    <th>Nom de caisse</th>
                                    <td>{{ entity.caisse.libelle  }}</td>
                                </tr>
                                <tr>
                                    <th>Dernier mis à jour</th>
                                    <td>{{ entity.caisse.dateUpdate|date('Y-m-d h:i:s')  }}</td>
                                </tr>
                                <tr>
                                    <th>Montant chéque</th>
                                    <td>{{ entity.caisse.montantCheque  }} TND</td>
                                </tr>
                                    <tr>
                                        <th>Montant Espéce</th>
                                        <td>{{ entity.caisse.montantEspece  }} TND</td>
                                    </tr>
                                    <tr>
                                        <th>Montant Total</th>
                                        <td>{{ entity.caisse.montantEspece + entity.caisse.montantCheque   }} TND</td>
                                    </tr>
                                {% endif %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- ==================== END OF WIDGETS CONTAINER ==================== -->
    </div>
    <!-- ==================== END OF PAGE CONTENT ==================== -->
{% endblock %}
