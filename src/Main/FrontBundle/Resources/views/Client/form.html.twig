{% block form_row %}
 <div class="form-group {{ errors|length > 0 ? 'has-error' : '' }}">
  {{ form_label(form, null, {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
        {{ form_errors(form) }}
    <div class="col-sm-6">
    {{ form_widget(form) }}
    </div>
    </div>
 {% endblock form_row %}