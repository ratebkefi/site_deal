{% extends '::base.html.twig' %}
{% form_theme form 'MainFrontBundle:Client:form.html.twig' %}
{% block stylesheets %}
{% endblock %}
{% block body %}

    {% for type, flashMessages in app.session.flashbag.all() %}
    {% for flashMessage in flashMessages %}
        <br/>
        <div class="alert {{ type }}">
            <button data-dismiss="alert" class="close" type="button">×</button>
            {{ flashMessage|trans }}
        </div>
    {% endfor %}
{% endfor %}

	<div class="row">
		<div class="col-md-12 entry">
			<h1>Mon compte</h1>
		</div>
	</div>
    <div class="informations">
        <!-- Profile Menu -->
        {{ render(controller('MainFrontBundle:Client:menuclient')) }}
        <!-- Breadcrumb -->
        <div class="row text-center">
			<div class="col-sm-12">
				<ul class="nav nav-pills btn-group">
					<li role="presentation" class="active"><a href="{{ path('mon_compte') }}">Compte</a></li>
					<li role="presentation"><a href="{{ path('mes_adresse') }}">Mes adresses</a></li>
				</ul>
			</div>
        </div>
        <!-- Modifier adresse Modal -->
        <div class="row">
		<div class="col-sm-12">
            {{ form_start(form, {'method': 'POST','attr': {'class': 'form-horizontal'}}) }}
            <div class="form-group">

                <label class="col-sm-4 control-label" for="civilite">Civilité</label>

                <div class="col-sm-6">
                    {{ form_widget(form.title, { 'attr': {'class': "form-control"} }) }}
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="prenom">Prénom / Nom</label>

                <div class="col-sm-3">
                    {{ form_widget(form.fname, { 'attr': {'class': "form-control"} }) }}
                </div>
                <div class="col-sm-3">
                    {{ form_widget(form.name, { 'attr': {'class': "form-control"} }) }}
                </div>
            </div>

            <div class="form-group">

                <label class="col-sm-4 control-label" for="cin">CIN</label>

                <div class="col-sm-6">
                    {{ form_widget(form.cin, { 'attr': {'class': "form-control"} }) }}

                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="datebirth">Date de naissance</label>

                <div class="col-sm-6">
                    {{ form_widget(form.datebirth, { 'attr': {'class': "form-control datepickerField"} }) }}

                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="email">E-Mail</label>

                <div class="col-sm-6">

                    {{ form_widget(form.email, { 'attr': {'class': "form-control"} }) }}
                </div>
                </div>
                <div class="form-group">
                                <label class="col-sm-4 control-label" for="phone">Téléphone</label>
                    <div class="col-sm-6">

                                {{ form_widget(form.phone, { 'attr': {'class': "form-control"} }) }}
</div>
</div>
            {{ form_row(form.password, { 'attr': {'class': "form-control"} }) }}


            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-6">
                    <input type="submit" class="btn btn-infos pull-right" value="Enregistrer les modifications"/>

                </div>
            </div>
            {{ form_widget(form._token) }}
            {{ form_end(form) }}
        </div>
		</div>
        <!-- /.row -->
    </div>

{% endblock %}
    {% block javascripts %}
        <!-- masked inputs -->
        <script src="{{ asset('RessourcesBack/js/lib/jquery-inputmask/jquery.inputmask.min.js') }}"></script>
        <script src="{{ asset('RessourcesBack/js/lib/jquery-inputmask/jquery.inputmask.extensions.js') }}"></script>
        <script src="{{ asset('RessourcesBack/js/lib/jquery-inputmask/jquery.inputmask.date.extensions.js') }}"></script>

        <script>


            $(".datepickerField").inputmask("date");

        </script>


    {% endblock %}
